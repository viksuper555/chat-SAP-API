scalar Time

type Message {
  id: ID!
  text: String!
  date: Time!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  messages: [Message!]!
  users: [User!]!
}

input NewMessage {
  text: String!
  userId: String!
}

input NewUser {
  username: String!
  password: String!
}

input Login {
  username: String!
  password: String!
}

type Mutation {
  createMessage(input: NewMessage!): Message!
  createUser(input: NewUser!): String!
  login(input: Login!): String!
}
